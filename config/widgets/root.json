[
  {
    "widget_id": "container",
    "section_id": "root",
    "widget_type": "KWidget",
    "layout_type": "KVBoxLayout",
    "spacing": 30,
    "margin_top": 80,
    "margin_bottom": 80,
    "children": [
      {
        "widget_id": "app_logo",
        "content": "pixmap{application.svg, scale: 160}",
        "widget_type": "KLabel",
        "alignment_string": "center"
      },
      {
        "widget_id": "counter_container",
        "widget_type": "KWidget",
        "layout_type": "KHBoxLayout",
        "alignment_string": "center",
        "children": [
          {
            "widget_id": "counter_label",
            "content": "Counter:",
            "style_object_name": "heroText",
            "widget_type": "KLabel"
          },
          {
            "widget_id": "counter_value",
            "content": "data{counter, 0}",
            "style_object_name": "heroText",
            "widget_type": "KLabel",
            "refresh_events": [
              "counter_value_change"
            ],
            "stylesheet": {
              "font-weight": "bold"
            }
          }
        ]
      },
      {
        "widget_id": "controls_container",
        "widget_type": "KWidget",
        "layout_type": "KVBoxLayout",
        "alignment_string": "center",
        "spacing": 5,
        "margin_top": 10,
        "margin_bottom": 10,
        "stylesheet": {
          "background-color": "rgba('success-a0', 0.1)"
        },
        "children": [
          {
            "widget_id": "inc_dec_controls",
            "widget_type": "KWidget",
            "layout_type": "KHBoxLayout",
            "children": [
              {
                "widget_id": "decrement_button",
                "content": "-",
                "tooltip": "Decrement",
                "controller": "DecrementButtonController",
                "widget_type": "KPushButton",
                "style_object_name": "heroText",
                "width": 100,
                "stylesheet": {
                  "background-color": "color('primary-a10')"
                }
              },
              {
                "widget_id": "increment_button",
                "content": "+",
                "tooltip": "Increment",
                "controller": "IncrementButtonController",
                "widget_type": "KPushButton",
                "style_object_name": "heroText",
                "width": 100,
                "stylesheet": {
                  "background-color": "color('warning-a10')"
                }
              }
            ]
          },
          {
            "widget_id": "reset_button",
            "content": "Reset",
            "controller": "ResetButtonController",
            "widget_type": "KPushButton",
            "style_object_name": "heroText",
            "stylesheet": {
              "background-color": "color('danger-a10')"
            }
          }
        ]
      },
      {
        "widget_id": "footer_spacer",
        "widget_type": "KSpacer"
      }
    ]
  }
]

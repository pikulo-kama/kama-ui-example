[
  {
    "widget_id": "container",
    "section_id": "root",
    "widget_type": "KWidget",
    "layout_type": "KVBoxLayout",
    "spacing": 30,
    "margin_bottom": 80,
    "children": [
      {
        "widget_id": "app_logo",
        "content": "pixmap{application.svg, scale: 160}",
        "widget_type": "KLabel",
        "alignment_string": "center"
      },
      {
        "widget_id": "counter_container",
        "widget_type": "KWidget",
        "layout_type": "KHBoxLayout",
        "alignment_string": "center",
        "height": 80,
        "children": [
          {
            "widget_id": "counter_label",
            "content": "Counter:",
            "style_object_name": "heroText",
            "widget_type": "KLabel"
          },
          {
            "widget_id": "counter_value",
            "content": "data{counter, 0}",
            "style_object_name": "heroText",
            "widget_type": "KLabel",
            "refresh_events": [
              "counter_value_change"
            ],
            "stylesheet": "font-weight: bold;"
          }
        ]
      },
      {
        "widget_id": "controls_container",
        "widget_type": "KWidget",
        "layout_type": "KHBoxLayout",
        "height": 80,
        "margin_left": 100,
        "margin_right": 100,
        "spacing": 100,
        "stylesheet": "background-color: color('surface-a20')",
        "children": [
          {
            "widget_id": "increment_button",
            "content": "Increment",
            "controller": "IncrementButtonController",
            "widget_type": "KPushButton",
            "stylesheet": "background-color: color('primary-a20')"
          },
          {
            "widget_id": "decrement_button",
            "content": "Decrement",
            "controller": "DecrementButtonController",
            "widget_type": "KPushButton",
            "stylesheet": "background-color: color('danger-a20')"
          },
          {
            "widget_id": "reset_button",
            "content": "Reset",
            "controller": "ResetButtonController",
            "widget_type": "KPushButton",
            "stylesheet": "background-color: color('danger-a0')"
          }
        ]
      }
    ]
  }
]

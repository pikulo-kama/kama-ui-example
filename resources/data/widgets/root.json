[
  {
    "id": "container",
    "section": "root",
    "layout": "KVBoxLayout",
    "spacing": 30,
    "margin_top": 80,
    "margin_bottom": 80,
    "children": [
      {
        "id": "app_logo",
        "type": "KLabel",
        "content": "pixmap{application.svg, scale: 160}",
        "alignment": "center"
      },
      {
        "id": "counter_container",
        "layout": "KHBoxLayout",
        "alignment": "center",
        "children": [
          {
            "id": "counter_label",
            "type": "KLabel",
            "content": "Counter:",
            "style_id": "heroText"
          },
          {
            "id": "counter_value",
            "type": "KLabel",
            "content": "data{counter, 0}",
            "style_id": "heroText",
            "refresh_events": [
              "counter_value_change"
            ],
            "stylesheet": {
              "font-weight": "bold"
            }
          }
        ]
      },
      {
        "id": "controls_container",
        "layout": "KVBoxLayout",
        "alignment": "center",
        "spacing": 5,
        "margin_top": 10,
        "margin_bottom": 10,
        "style_id": "controlsContainer",
        "children": [
          {
            "id": "inc_dec_controls",
            "layout": "KHBoxLayout",
            "children": [
              {
                "id": "decrement_button",
                "content": "-",
                "tooltip": "Decrement",
                "controller": "DecrementButtonController",
                "type": "KPushButton",
                "style_id": "heroText",
                "width": 100,
                "stylesheet": {
                  "background-color": "color('primary-a10')"
                }
              },
              {
                "id": "increment_button",
                "content": "+",
                "tooltip": "Increment",
                "controller": "IncrementButtonController",
                "type": "KPushButton",
                "style_id": "heroText",
                "width": 100,
                "stylesheet": {
                  "background-color": "color('warning-a10')"
                }
              }
            ]
          },
          {
            "id": "reset_button",
            "content": "Reset",
            "controller": "ResetButtonController",
            "type": "KPushButton",
            "style_id": "heroText",
            "stylesheet": {
              "background-color": "color('danger-a10')"
            }
          }
        ]
      },
      {
        "id": "footer_spacer",
        "type": "KSpacer"
      }
    ]
  }
]
